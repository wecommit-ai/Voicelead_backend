datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  companyName String?
  booths      Booth[]
  createdAt   DateTime @default(now())
}

model Booth {
  id        Int      @id @default(autoincrement())
  name      String
  event     String
  location  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  leads     Lead[]
  createdAt DateTime @default(now())
}

model Lead {
  id      Int   @id @default(autoincrement())
  boothId Int
  booth   Booth @relation(fields: [boothId], references: [id], onDelete: Cascade)

  name     String
  email    String?
  company  String?
  phone    String?
  interest String?

  imageUrl   String? // üñºÔ∏è business card / image upload
  transcript String? // üìù full audio transcription

  status    String
  source    String
  createdAt DateTime @default(now())
}
